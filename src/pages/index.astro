---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'howibuild.ai — Build logs from the trenches',
  description: 'Real-time insights for solo founders, product operators, and tech-minded builders.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Latest Build Logs',
        href: '/blog',
        icon: 'tabler:arrow-right',
      },
      { 
        text: 'About the Project', 
        href: '/about' 
      },
    ]}
  >
    <Fragment slot="title">
      Build logs from the <span class="text-cyan-400 dark:text-cyan-400">trenches</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold">Real-time insights</span> for solo founders, product operators, and tech-minded builders.
      <br><br>
      No sugar-coating. No fluff. Just <span class="text-cyan-400">honest build logs</span> documenting what it's actually like to ship products as a founder.
    </Fragment>
  </Hero>

  <!-- Latest Posts -->
  <BlogLatestPosts
    title="Latest Build Logs"
    information="Raw, unfiltered stories of building products. From database dramas to deployment victories—see what's actually happening in the trenches."
  />
</Layout>